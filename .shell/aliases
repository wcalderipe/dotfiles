#!/usr/bin/env sh

alias ..='cd ..'
alias ...='cd ../..'
alias ll='ls -lahF' # Long view and show hidden
alias df='df -h' # Disk free, in gigabytes, not bytes
alias du='du -hc' # Calculate total disk usage for a folder

alias conf='/usr/bin/git --git-dir=$HOME/.my-conf/ --work-tree=$HOME' # Manage .my-conf git files
